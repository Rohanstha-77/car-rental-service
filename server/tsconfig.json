{
  "compilerOptions": {
    "target": "ES2020",               
    "module": "esnext", //for import and export
    "moduleResolution": "node",
    "allowArbitraryExtensions": true,
    "rootDir": "./src",               
    "outDir": "./dist",               
    "strict": true,                  
    "esModuleInterop": true,         
    "skipLibCheck": true,            
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true        
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
